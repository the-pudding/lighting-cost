/* CUSTOM STORY STYLE */
.device-container
    background-color #B4B89F
    width 35vw
    height 80vh
    margin 0 auto
    display flex
    flex-direction column
    padding 1vw
    justify-content: space-evenly
    @media (max-width: 400px)
        width 95vw


.panel-component
    background #B4B89F
    border 0.25px solid #C7CBB0
    box-sizing border-box
    box-shadow 5px 5px 20px rgba(0, 0, 0, 0.1), -5px -5px 20px rgba(255, 255, 255, 0.1)
    border-radius 5px

.device-top
    background-color #B4B89F
    border: 1px solid #281C16;
    box-sizing border-box
    box-shadow 5px 5px 10px rgba(0, 0, 0, 0.2)
    border-radius 20px
    width 100%
    height 100%

.device-middle
    margin 1.5vh 0
    width 100%
    height 100%
    display flex
    flex-direction row

    .control-panel-container
        display flex
        flex-direction: row
        justify-content: space-between
        width 100%   



        #slider
            .noUi-pips-vertical
                left 50%
                transform translate(-50%,0)
            .noUi-base
                transform translate(-50%,0)

        .panel
            height 100%
            width 32%



        .panel-left
            background-color: #B4B89F

        .panel-middle
            background-color: #B4B89F
            display flex
            flex-direction: column
            justify-content: space-between

            .toggle
                height 48%
                width 100%
                background-color: #B4B89F
                padding 1rem

                .toggle-title
                    font-family: 'Share Tech Mono' 
                    text-transform: uppercase
                    text-align: center
                    margin 0
                    font-size: 16px

                .toggle-middle
                    background-color red
                    height 35%
                    overflow hidden
                    position: relative


                    .toggle-switch-background
                        width 200%
                        height 100%
                        display flex
                        flex-direction: row
                        

                        .switch-background
                            background-color #E8E3E3
                            width 10px
                            height 100%
                            border-right 0.5px solid #fff

                    .toggle-switch-top
                        width 20%
                        height 100%
                        background-color #E8E3E3
                        position absolute
                        right 0%
                        top 0%
                        -webkit-box-shadow: -5px 1px 5px 0px rgba(0,0,0,0.21);
                        -moz-box-shadow: -5px 1px 5px 0px rgba(0,0,0,0.21);
                        box-shadow: -5px 1px 5px 0px rgba(0,0,0,0.21);
                    
                    .toggle-switch-top.switch-on
                        -webkit-box-shadow: 5px 1px 5px 0px rgba(0,0,0,0.21);
                        -moz-box-shadow: 5px 1px 5px 0px rgba(0,0,0,0.21);
                        box-shadow: 5px 1px 5px 0px rgba(0,0,0,0.21);
  
                
                .toggle-bottom
                    display flex
                    flex-direction: row
                    justify-content: space-between
                    padding-top 0.5rem
                    
                    .toggle-switch-label
                        text-transform: uppercase
                        font-family: 'Share Tech Mono' 
                        font-size 14px
                        

            .dial 
                height 48%
                width 100%
                background-color: #B4B89F

        .panel-right
            background-color: #B4B89F
            padding 1rem

            .big-button-container
                height 40%
                width 100%

                .button-outer
                    border-radius 50%
                    height 100%
                    width 100%

                    .button-inner.red
                        background-color: red
                        height 100%
                        width 100%
                        border-radius 50%

            .big-button-label
                background-color: #281C16

                .big-button-label-text
                    color: #E8E3E3
                    text-align: center
                    text-transform: uppercase
                    font-family: 'Share Tech Mono' 
                    font-size 14px
                    margin 0

.device-bottom
    // margin 2vh 0
    width 100%
    height 100%
    display flex
    flex-direction: column

    .flashing-light-container
        background-color #B4B89F
        height 50%
        margin-bottom 1vh
    
    .dropdown-container
        background-color: #B4B89F
        height 45%
