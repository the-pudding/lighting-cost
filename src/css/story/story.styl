/* CUSTOM STORY STYLE */
.device-container
    background-color #B4B89F
    width 35vw
    height 80vh
    margin 0 auto
    display flex
    flex-direction column
    padding 1vw
    justify-content: space-evenly
    @media (max-width: 400px)
        width 95vw


.panel-component
    background #B4B89F
    border 0.25px solid #C7CBB0
    box-sizing border-box
    box-shadow 5px 5px 20px rgba(0, 0, 0, 0.1), -5px -5px 20px rgba(255, 255, 255, 0.1)
    border-radius 5px

.device-top
    background-color #B4B89F
    border: 1px solid #281C16;
    box-sizing border-box
    box-shadow 5px 5px 10px rgba(0, 0, 0, 0.2)
    border-radius 20px
    width 100%
    height 100%

    .device-display-container
        height 100%
        width 100%
        .needle-screen
            background: radial-gradient(83.43% 61.24% at 50% 50%, #FFE1AB 0%, #FBC570 100%), #FFDA9B;
            box-shadow: inset -5px -5px 10px rgba(0, 0, 0, 0.1), inset 5px 5px 10px rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            height 100%
            width 100%


.device-middle
    margin 1.5vh 0
    width 100%
    height 100%
    display flex
    flex-direction row

    .control-panel-container
        display flex
        flex-direction: row
        justify-content: space-between
        width 100%   



        #slider
            .noUi-pips-vertical
                left 50%
                transform translate(-50%,0)
                cursor pointer
            .noUi-base
                transform translate(-50%,0)
            .noUi-touch-area
                cursor pointer

        .panel
            height 100%
            width 32%



        .panel-left
            background-color: #B4B89F

        .panel-middle
            background-color: #B4B89F
            display flex
            flex-direction: column
            justify-content: space-between

            .toggle
                height 48%
                width 100%
                background-color: #B4B89F
                padding 1rem

                .toggle-title
                    font-family: 'Share Tech Mono' 
                    text-transform: uppercase
                    text-align: center
                    margin 0
                    font-size: 12px

                .toggle-middle
                    background-color red
                    height 35%
                    overflow hidden
                    position: relative
                    cursor pointer


                    .toggle-switch-background
                        width 200%
                        height 100%
                        display flex
                        flex-direction: row
                        

                        .switch-background
                            background-color #E8E3E3
                            width 10px
                            height 100%
                            border-right 0.5px solid #fff

                    .toggle-switch-top
                        width 20%
                        height 100%
                        background-color #E8E3E3
                        position absolute
                        right 0%
                        top 0%
                        -webkit-box-shadow: -5px 1px 5px 0px rgba(0,0,0,0.21);
                        -moz-box-shadow: -5px 1px 5px 0px rgba(0,0,0,0.21);
                        box-shadow: -5px 1px 5px 0px rgba(0,0,0,0.21);
                    
                    .toggle-switch-top.switch-on
                        -webkit-box-shadow: 5px 1px 5px 0px rgba(0,0,0,0.21);
                        -moz-box-shadow: 5px 1px 5px 0px rgba(0,0,0,0.21);
                        box-shadow: 5px 1px 5px 0px rgba(0,0,0,0.21);
  
                
                .toggle-bottom
                    display flex
                    flex-direction: row
                    justify-content: space-between
                    padding-top 0.5rem
                    
                    .toggle-switch-label
                        text-transform: uppercase
                        font-family: 'Share Tech Mono' 
                        font-size 12px
                        

            .dial-container
                height 48%
                width 100%
                background-color: #B4B89F
                padding 1rem

                .dial-labels
                    transform rotate(-130deg) translate(-64px, -52px)                    
                    position: absolute
                    @media(max-width: 400px)
                        transform rotate(-130deg) translate(-52px, -42px)
                    
                    .dial-section-label
                        font-family: 'Share Tech Mono'
                        position absolute
                        transform-origin: bottom center
                        font-size: 12px
                        cursor pointer

                    .char1
                        transform rotate(-10deg)
                    .char2
                        transform rotate(35deg)
                    .char3
                        transform rotate(80deg)   
                    .char4
                        transform rotate(125deg)
                    .char5
                        transform rotate(170deg)
                    .char6
                        transform rotate(215deg)
                    .char7
                        transform rotate(270deg)                                                                                                                     

                .dial
                    border-radius 50%
                    background-color: #281C16
                    height 100%
                    width 100%
                    transform rotate(-135deg) 

                    .dial-line
                        height 25%
                        width 1%
                        background-color: white
                        margin 0 auto


        .panel-right
            background-color: #B4B89F
            padding 0.5rem

            .big-button-container
                height 40%
                margin 0 auto
                // width 100%

                .button-outer
                    border-radius 50%
                    height 100%
                    width 100%
                    background: linear-gradient(180deg, rgba(0, 0, 0, 0.1) 0%, rgba(180, 184, 159, 0) 100%), #B4B89F;

                    .button-inner
                        cursor pointer

                    .button-inner.red
                        // background-color: red
                        background: radial-gradient(283.75% 283.75% at 50% 50%, rgba(0, 0, 0, 0.1) 0%, #D00000 100%), #D00000;
                        border: 1px solid #3C2A22;
                        box-sizing: border-box;                        
                        height 80%
                        width 80%
                        border-radius 50%
                        transform translate(12.5%,12.5%)

                    .button-inner.white
                        background: radial-gradient(283.75% 283.75% at 50% 50%, rgba(0, 0, 0, 0.1) 0%, #FCF1E4 100%), #FCF1E4;
                        border: 1px solid #3C2A22;
                        box-sizing: border-box;                        
                        height 80%
                        width 80%
                        border-radius 50%
                        transform translate(12.5%,12.5%)

                    .button-up-shadow    
                        box-shadow: 0px 15px 10px rgba(0, 0, 0, 0.2), inset 0px -10px 10px rgba(255, 255, 255, 0.5), inset 0px 10px 10px rgba(0, 0, 0, 0.2);

            .big-button-label
                background-color: #281C16
                margin-bottom 0.5rem

                .big-button-label-text
                    color: #E8E3E3
                    text-align: center
                    text-transform: uppercase
                    font-family: 'Share Tech Mono' 
                    font-size 12px
                    margin 0
                    padding 0 0.05rem

.device-bottom
    // margin 2vh 0
    width 100%
    height 100%
    display flex
    flex-direction: column

    .flashing-light-container
        background-color #B4B89F
        height 50%
        margin-bottom 1vh
        box-shadow: 5px 5px 20px rgba(0, 0, 0, 0.1), -5px -5px 20px rgba(255, 255, 255, 0.1);
        border-radius: 5px;
        padding 1rem

        .light-row
            display flex
            flex-direction row
            justify-content: space-around
            height 50%
            width 100% 

            .light-box-container
                height 100%
                display flex
                flex-direction: row
                padding-bottom: 0.5rem;

                .light-box
                    margin-right 0.5rem

            .light-box-title
                font-family: 'Share Tech Mono' 
                font-size 12px
                text-transform: uppercase
                margin 0
                text-align: center

            .light-box-light
                border-radius: 50%
                background: radial-gradient(50% 50% at 50% 50%, #D00000 40.1%, #E8E3E3 100%), #D00000;
                border: 2px solid #3C2A22;
                box-sizing: border-box;
                width 1.5rem
                height 1.5rem
                cursor pointer
                margin 0 auto
            
            .light-box-light.yellow
                background: radial-gradient(50% 50% at 50% 50%, #F2C94C 40.1%, #E8E3E3 100%), #F2C94C;
        
            .light-box-light.green
                background: radial-gradient(50% 50% at 50% 50%, #97A93C 40.1%, #E8E3E3 100%), #97A93C;


            .light-charge-box-container
                width 20%

                .light-charge-box
                    display: flex
                    flex-direction: row
                    justify-content: space-around
                    background: linear-gradient(180deg, rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0.5) 100%), #B4B89F;
                    padding-bottom: 0.5rem;

        .label-row
            .flashing-light-title
                text-align: center
                font-family: 'Share Tech Mono' 
                font-size 14px
                text-transform: uppercase

.dropdown-container
    background-color: #B4B89F
    height 35%
    padding 1rem
    display: flex
    flex-direction: row
    justify-content: space-around

    .dropdown-button
        padding-right 1rem
        background: #281C16;
        width 25%
        height 50%
        cursor pointer

        .dropdown-title
            font-family: 'Share Tech Mono' 
            font-size 14px
            text-transform: uppercase
            margin 0
            color: #E8E3E3;
            text-align: center