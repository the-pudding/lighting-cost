/* CUSTOM STORY STYLE */
.device-container
    background-color #B4B89F
    width 35vw
    height 80vh
    margin 0 auto
    display flex
    flex-direction column
    padding 1vw
    justify-content: space-evenly
    @media (max-width: 400px)
        width 95vw


.panel-component
    background #B4B89F
    border 0.25px solid #C7CBB0
    box-sizing border-box
    box-shadow 5px 5px 20px rgba(0, 0, 0, 0.1), -5px -5px 20px rgba(255, 255, 255, 0.1)
    border-radius 5px

.device-top
    background-color blue
    border: 1px solid #281C16;
    box-sizing border-box
    box-shadow 5px 5px 10px rgba(0, 0, 0, 0.2)
    border-radius 20px
    width 100%
    height 100%

.device-middle
    margin 1.5vh 0
    width 100%
    height 100%
    display flex
    flex-direction row

    .control-panel-container
        display flex
        flex-direction: row
        justify-content: space-between
        width 100%    

        .panel
            height 100%
            width 32%



        .panel-left
            background-color: gray

        .panel-middle
            background-color: orange
            display flex
            flex-direction: column
            justify-content: space-between

            .toggle
                height 48%
                width 100%
                background-color: white
            .dial 
                height 48%
                width 100%
                background-color: lime

        .panel-right
            background-color: yellow 


.device-bottom
    // margin 2vh 0
    width 100%
    height 100%
    display flex
    flex-direction: column

    .flashing-light-container
        background-color red
        height 50%
        margin-bottom 1vh
    
    .dropdown-container
        background-color: green
        height 45%
        